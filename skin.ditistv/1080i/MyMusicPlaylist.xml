<window id="500">
  <defaultcontrol always="true">50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <include>OpenClose</include>
  <controls>
    <control type="group">
      <control type="group" description="50">
        <visible>Control.IsVisible(50)</visible>
        <include>left_Panel_square</include>
        <include>MusicInfo</include>
        <control type="group" description="Slider and List">
          <include>LargeListItemCount</include>
          <posx>960</posx>
          <posy>131</posy>
          <control type="fixedlist" id="50">
            <width>960</width>
            <height>888</height>
            <onleft condition="!Skin.HasSetting(ViewsMenuOff)">9000</onleft>
            <onright condition="!Skin.HasSetting(Scrollbars_Passive)">60</onright>
            <onup>50</onup>
            <ondown>50</ondown>
            <pagecontrol>60</pagecontrol>
            <viewtype label="535">List</viewtype>
            <focusposition>3</focusposition>
            <movement>4</movement>
            <preloaditems>4</preloaditems>
            <scrolltime tween="sine" easing="inout">280</scrolltime>
            <itemlayout width="890" height="111">
              <control type="image">
                <height>111</height>
                <width>111</width>
                <bordersize>5</bordersize>
                <texture background="true">$INFO[ListItem.Icon]</texture>
                <aspectratio>scale</aspectratio>
              </control>
              <control type="textbox" description="Main Label">
                <posx>128</posx>
                <height>111</height>
                <width>700</width>
                <font>size30</font>
                <autoscroll>false</autoscroll>
                <textcolor>Grey2</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Label2">
                <posx>100r</posx>
                <include>BigListDetails</include>
                <label>$INFO[ListItem.Label2]</label>
              </control>
              <control type="image" description="playing">
                <visible>Player.HasAudio</visible>
                <visible>StringCompare(ListItem.Title,MusicPlayer.Title)</visible>
                <posx>65r</posx>
                <height>60</height>
                <width>36</width>
                <aspectratio>keep</aspectratio>
                <texture>images/nowplayingnf.png</texture>
              </control>
              <control type="image">
                <width>920</width>
                <height>1</height>
                <texture>images/line.png</texture>
              </control>
            </itemlayout>
            <focusedlayout width="890" height="111">
              <control type="image">
                <animation effect="fade" end="0" time="30">UnFocus</animation>
                <width>890</width>
                <height>111</height>
                <texture>images/white2.png</texture>
                <colordiffuse>335555FF</colordiffuse>
              </control>
              <control type="image">
                <height>111</height>
                <width>111</width>
                <bordersize>5</bordersize>
                <texture background="true">$INFO[ListItem.Icon]</texture>
                <aspectratio>scale</aspectratio>
              </control>
              <control type="textbox" description="Main Label">
                <posx>128</posx>
                <height>111</height>
                <width>700</width>
                <font>size30</font>
                <autoscroll>false</autoscroll>
                <textcolor>White2</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Label2">
                <posx>100r</posx>
                <include>BigListDetails</include>
                <label>$INFO[ListItem.Label2]</label>
              </control>
              <control type="image" description="playing">
                <visible>Player.HasAudio</visible>
                <visible>StringCompare(ListItem.Title,MusicPlayer.Title)</visible>
                <posx>65r</posx>
                <height>60</height>
                <width>36</width>
                <aspectratio>keep</aspectratio>
                <texture>images/nowplayingfo.png</texture>
              </control>
              <control type="image">
                <width>900</width>
                <height>1</height>
                <texture>images/line.png</texture>
              </control>
            </focusedlayout>
          </control>
        </control>
        <control type="scrollbar" id="60">
          <posx>51r</posx>
          <posy>135</posy>
          <height>870</height>
          <onleft>50</onleft>
          <onright>-</onright>
        </control>
      </control>
      <control type="image">
        <posx>960</posx>
        <width>1</width>
        <height>1080</height>
        <texture>images/linev.png</texture>
      </control>
      <control type="group" description="Side menu 9000 group">
        <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
        <include>DialogOpenCloseVisible</include>
        <control type="image" description="List back">
          <posx>459</posx>
          <posy>168</posy>
          <width>1002</width>
          <height>762</height>
          <aspectratio>stretch</aspectratio>
          <texture border="150">images/dialog.png</texture>
        </control>
        <control type="grouplist" id="9000">
          <include>DialogGLs</include>
          <control type="radiobutton" id="20" description="Shuffle">
            <radioposx>630</radioposx>
            <include>DialogButt</include>
            <label>191</label>
          </control>
          <control type="button" id="21" description="Save">
            <include>DialogButt</include>
            <label>190</label>
          </control>
          <control type="button" id="22" description="Clear">
            <include>DialogButt</include>
            <label>192</label>
          </control>
          <control type="button" id="23" description="Play">
            <include>DialogButt</include>
            <label>208</label>
          </control>
          <control type="button" id="26" description="Repeat">
            <include>DialogButt</include>
            <label>-</label>
          </control>
        </control>
      </control>
    </control>
    <include>WindowsTopInfos</include>
  </controls>
</window>
